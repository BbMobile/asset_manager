<% if value != nil %>
    <%=  select(field.name,field.name,FieldOption.find_all_by_field_id(field.id).collect {|p| [ p.option, p.id ] },{:selected  => value},{:multiple => true}) %>
<% else %>
    <%=  select(field.name,field.name,FieldOption.find_all_by_field_id(field.id).collect {|p| [ p.option, p.id ] },{},{:multiple => true}) %>
<% end %>