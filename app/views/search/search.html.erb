<%= render :template => 'shared/navbar' ,:locals => {:assetsNav => false, :searchNav => true,:adminNav => false}%>

<%= render :template => 'search/sidebar'  %>
<%= render :template => 'search/custom_columns' %>
<table class="table table-hover table-bordered">
  <tr>
    <th>Name</th>
    <th>Description</th>
    <% SearchColumn.first(:user_id => current_user.id).search_columns.each do |search| %>
        <% if search != '' %>
            <th><%=  Field.find(BSON::ObjectId.from_string(search)).name %> </th>
        <% end %>
    <% end %>
    <th>Actions</th>
  </tr>
  <% for asset in @assets %>
      <% if can_view(asset.asset_type_id) %>
          <tr style="background-color: white;">
            <% if can_view(asset.asset_type_id) %>
                <td style="text-align: center;">
                  <%= link_to asset.name, {:controller => 'assets', :action => 'view',:id => asset.id} %>
                </td>
                <td style="text-align: center;">
                  <%= asset.description %>
                </td>
            <% else %>
                <td style="text-align: center;">
                  <%= asset.name %>
                </td>
                <td style="text-align: center;">
                  <%= asset.description %>
                </td>
            <% end %>
            <% SearchColumn.first(:user_id => current_user.id).search_columns.each do |search| %>
                <% if search != '' %>
                    <td style="text-align: center;">
                      <%= render :template => 'search/field_column_display/'+FieldType.find(Field.find(BSON::ObjectId.from_string(search)).field_type_id).type_name.downcase.gsub(' ','_')+'_column_display' ,
                                 :locals => { :value => asset.field_value.detect {|c|c.field_id == search}} %>
                    </td>
                <% end %>
            <% end %>
            <td style="text-align: center;">
              <div class="btn-group">
                <button class="btn">Action</button>
                <button class="btn dropdown-toggle" data-toggle="dropdown"><span class="caret"></span></button>
                <ul class="dropdown-menu">
                  <% if can_edit(asset.asset_type_id) %>
                      <li><%= link_to 'Edit',{ :controller => 'assets', :action => 'edit', :id => asset.id} %></li>
                  <% end %>
                  <% if can_destroy(asset.asset_type_id) %>
                      <li><%= link_to 'Delete',{ :controller => 'assets', :action => 'delete', :asset_id => asset.id} %></li>
                  <% end %>

                </ul>
              </div>
            </td>
          </tr>
      <% end %>
  <% end %>
</table>
<%= render :template => 'search/pagination' %>