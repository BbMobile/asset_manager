<td><%= field_name %></td>
<% if required %>
    <td><%=  select(field_name,field_name, Field.find(BSON::ObjectId.from_string(field_id)).field_option.collect {|p| [ p.option, p.id ] },{:prompt => "Please Select"},"data-validation" => "required") %></td>
<% else %>
    <td><%=  select(field_name,field_name, Field.find(BSON::ObjectId.from_string(field_id)).field_option.collect {|p| [ p.option, p.id ] },{:prompt => "Please Select"}) %></td>
<% end %>
<%= hidden_field(field_name, field_name+'_type',:value=> 'single_option') %>