<%= render :template => 'shared/navbar' %>
<div align="right">
  <ul class="nav nav-pills">
    <li class="dropdown" id="menu1">
  	<a class="dropdown-toggle" data-toggle="dropdown" href="#menu1">
  	  Create Asset
  	  <b class="caret"></b>
  	</a>
  	<ul class="dropdown-menu">
       <% AssetType.all.each do |assetType| %>
            <li><%= link_to assetType.name, :controller => 'assets', :action => 'create',:id => assetType.id %></li>
       <% end %>
  	</ul>
    </li>
  </ul>
</div>
<table class="table table-striped">
  <tr>
	<th>Type</th>
	<th>Name</th>
	<th>Description</th>
	<th>Actions</th>
  </tr>
  <% @assets.each do |asset| %>
	  <tr>
		<td>
		  <%= link_to 'sdfs', :controller => 'assets', :action => 'view', :id => asset.id %>
		</td>
		<td>
		  <%= link_to asset.name, :controller => 'assets', :action => 'view', :id => asset.id %>
		</td>

		<td>
		  <%= link_to asset.description, :controller => 'assets', :action => 'view', :id => asset.id %>
		</td>
		<td>
		  <%= link_to 'Edit', {:action => 'edit' ,:id => asset.id}, :class => "btn"  %>
		  <%= render :template => 'assets/delete', :locals => {:asset => asset} %>
		</td>
	  </tr>
  <% end %>
</table>
